<% include ../partials/header %>
<div class="container" style="margin-top:30px;">
    <div class="thumbnail" style="padding:30px;margin-bottom: 40px;">
        <div style=" margin-bottom: 20px;">
        
        
            <h3 class="col-md-9" style="padding-left:0px;">Search Results</h3>
            <% blogs.forEach(function(blog) { %>
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-md-6" style="padding-top: 20px;">
                    <img class="img-responsive" style="width: 100%; height: 267px;" src="<%= blog.image %>">
                </div>
                <div class="col-md-6" style="padding-top: 20px;">
                    <h4><a><%= blog.name %></a></h4>
                    <p style="margin-top: 10px; height: 92px; overflow: hidden;"><%= blog.description %></p>
                    <p>
                        <em>Submitted By <%= blog.author.username %> at <%= blog.address %></em>
                    </p>
                    <p>
                        <em><%= blog.time %></em>
                    </p>
                    <div class="row" style="margin-top:22px;">
                        <div class="col-md-2 col-3">
                            <a class="btn btn-xs btn-primary blog-btn" href="/blogs/<%= blog._id %>">Detail</a>
                        </div>
                        
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>
<% include ../partials/footer %>

 
